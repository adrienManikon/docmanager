<!DOCTYPE HTML>
<html>
    <head>
        <meta charset="utf-8">
        <title>{% block title %}DocManager{% endblock %}</title>
        
        {% stylesheets filter='cssrewrite'
            'css/metro.css'
            'css/metro-icons.css'
            '@SWDocManagerBundle/Resources/public/css/main.css'%}
            <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
        {% endstylesheets %}
    </head>
    <body>
        
        <div class="container">
            <h1>Docmanager</h1>
                     
            {% block body %}
            {% endblock %}
        
        </div>
            
        <div data-role="dialog" id="already-exist-dialog" class="padding20 dialog grid" data-close-button="true" data-overlay="true" data-overlay-color="op-dark">

            <h1>A document with the same name already exists</h1>
            
            <div class="row cells1">
                <div class="cell">
                    <p>Would you like to override the file ?</p>
                </div>
            </div>
            
            <div class="row cells12">
                <div class="cell offset8 colspan2">
                    <button class="button" id="cancelOverride">Cancel</button>
                </div>
                <div class="cell colspan2">
                    <button class="button square-button" id="confirmOverride">OK</button>
                </div>
            </div>
        </div>

    </body>    
    

    {% block javascript %}
        {% javascripts
            'js/jquery.js'
            'js/metro.js'
            '@SWDocManagerBundle/Resources/public/js/commun.js' %}
          <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
    {% endblock %}
</html>