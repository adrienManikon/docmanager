<div data-role="dialog" id="edit-dialog" class="padding20 dialog grid" data-close-button="true" data-overlay="true" data-overlay-color="op-dark">
    
    <h1>Edit Document</h1>
    
    <form id="edit-dialog-form" action="{{ path('sw_doc_manager_edit_post') }}" title="" method="post">
        <div class="row cells12 fileInput">
            <div class="cell colspan2">
                <div class="input-control text full-size">
                    <input type="text" name="code" readonly>
                </div>
            </div>
            <div class="cell colspan6">
                <div class="input-control text full-size">
                    <input type="text" name="name">
                </div>                
            </div>
            <div class="cell colspan2">
                <div class="input-control text full-size">
                    <input type="text" name="date" readonly>
                </div>
            </div>                    
            <div class="cell colspan2">
                <div class="input-control text full-size">
                    <input type="initial" name="creator" readonly>
                </div>                
            </div>
        </div> 
        <input type="hidden" name="id" readonly>
        <div class="row cells12">
            <div class="cell offset8 colspan4">
                <button class="button primary full-size" type="submit">Submit</button>
            </div>
        </div>         
    </form>
    
</div>
        
<div data-role="dialog" id="edit-dialog-loading" class="padding20 dialog grid" data-close-button="true" data-overlay="true" data-overlay-color="op-dark">
    
    <div class="margin60">
        <p>Saving...</p>
        <br/>
        <div data-role="preloader" data-type="cycle" data-style="dark"></div>
    </div>
    
</div>        
        
<div data-role="dialog" id="edit-dialog-success" class="padding20 dialog success" data-close-button="true" data-type="success" data-overlay="true" data-overlay-color="op-dark">
    <h1>Editing successfull</h1>
    <p>
        Your file has been well saved.
    </p>
</div>        